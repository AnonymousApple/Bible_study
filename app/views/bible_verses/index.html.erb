<style type="text/css">
  td {
    border-right: 5px groove #ffaadd;
    border-bottom: 5px groove #ffaadd;
    border-left: 5px groove #ffaadd;
    color: aqua;
  }
  th {
    border: 5px inset red;
  }
  td, th {
    text-align: center;
    vertical-align: middle;
  }
</style>
<h1>Bible Verses</h1>
<table class='table' id='resizable'>
  <thead>
    <tr>
      <th>Question</th>
      <th>Chapter</th>
      <th>Verse number</th>
      <th>Book</th>
      <th>Verse text</th>
      <th colspan="3">Configure</th>
    </tr>
  </thead>

  <tbody>
    <% @bible_verses.each do |bible_verse| %>
      <tr>
        <td><%= bible_verse.question %></td>
        <td><%= bible_verse.chapter %></td>
        <td><%= bible_verse.verse_number %></td>
        <td><%= bible_verse.book %></td>
        <% if bible_verse.verse_text.length >= 100 %>
        <% unless bible_verse.verse_text.include? '...' %>
          <td><%= bible_verse.verse_text[0..50] + '...' %></td>
        <% else %>
          <td><%= bible_verse.verse_text %></td>
          <% end %>
        <% end %>
        <td><%= link_to 'Show', bible_verse, class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_bible_verse_path(bible_verse), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Delete', bible_verse, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if @bible_verses.length > 0 %>
  <div class="well float-right" id='draggable'>
    <h3 style='text-align: center; vertical-align: center;'>All Bible Verses</h3>
    <ol>
      <% @bible_verses.each do |verse| %>
      <li><%= verse.book %> <%= verse.chapter %>:<%= verse.verse_number %></li><br />
      <p><%= verse.verse_text %></p>
      <% end %>
    </ol>
    <%= paginate @bible_verses %>
  </div>
<% end %>

<br>
<%= paginate @bible_verses %>

<%= link_to 'New Bible Verse', new_bible_verse_path, class: 'btn btn-primary' %>
